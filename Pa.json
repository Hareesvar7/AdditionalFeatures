{
    "name": "policy-versioning-extension",
    "displayName": "Policy Versioning Extension",
    "description": "A VS Code extension to version and list OPA policy files",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.60.0"
    },
    "activationEvents": [
        "onCommand:extension.savePolicyVersion",
        "onCommand:extension.listPolicyVersions"
    ],
    "main": "./Extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.savePolicyVersion",
                "title": "Save Policy Version"
            },
            {
                "command": "extension.listPolicyVersions",
                "title": "List Policy Versions"
            }
        ]
    },
    "scripts": {
        "lint": "eslint ."
    },
    "dependencies": {
        "vscode": "^1.60.0"
    }
}
