{
    "name": "opa-audit-log-extension",
    "displayName": "OPA Audit Log with Report",
    "description": "Extension to save, list file versions, and generate audit log reports",
    "version": "1.1.0",
    "engines": {
        "vscode": "^1.60.0"
    },
    "activationEvents": [
        "onCommand:extension.saveVersion",
        "onCommand:extension.listVersions",
        "onCommand:extension.generateReport"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.saveVersion",
                "title": "Save File Version"
            },
            {
                "command": "extension.listVersions",
                "title": "List Saved Versions"
            },
            {
                "command": "extension.generateReport",
                "title": "Generate Audit Report"
            }
        ]
    },
    "scripts": {
        "test": "echo \"No tests specified\" && exit 1"
    },
    "dependencies": {
        "pdfkit": "^0.12.3",
        "vscode": "^1.60.0"
    }
}
