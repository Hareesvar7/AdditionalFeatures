{
    "name": "opa-policy-extension",
    "displayName": "OPA Policy Extension",
    "description": "A VS Code extension for managing OPA policies with compliance reporting.",
    "version": "1.0.0",
    "publisher": "[Your Publisher Name]",
    "repository": {
        "type": "git",
        "url": "https://github.com/[YourRepo]/opa-policy-extension.git"
    },
    "engines": {
        "vscode": "^1.60.0" // Adjust based on the VS Code version you're targeting
    },
    "activationEvents": [
        "onCommand:opaPolicyExtension.saveVersion",
        "onCommand:opaPolicyExtension.listVersions",
        "onCommand:opaPolicyExtension.performOpaEval"
    ],
    "main": "./Extension.js",
    "contributes": {
        "commands": [
            {
                "command": "opaPolicyExtension.saveVersion",
                "title": "Save OPA Policy Version"
            },
            {
                "command": "opaPolicyExtension.listVersions",
                "title": "List Saved OPA Policy Versions"
            },
            {
                "command": "opaPolicyExtension.performOpaEval",
                "title": "Perform OPA Evaluation"
            }
        ],
        "activationEvents": [
            "onCommand:opaPolicyExtension.saveVersion",
            "onCommand:opaPolicyExtension.listVersions",
            "onCommand:opaPolicyExtension.performOpaEval"
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./out/src/extension.js"
    },
    "devDependencies": {
        "typescript": "^4.0.0",
        "vscode": "^1.60.0",
        "pdfkit": "^0.12.1" // Include PDFKit for report generation
    },
    "dependencies": {
        "fs-extra": "^10.0.0" // Include fs-extra for enhanced file system operations (if needed)
    },
    "files": [
        "out",
        "src",
        "package.json"
    ],
    "homepage": "https://github.com/[YourRepo]/opa-policy-extension",
    "bugs": {
        "url": "https://github.com/[YourRepo]/opa-policy-extension/issues"
    }
}
